{
    "name": "co-yoga",
    "version": "2.2.0",
    "files": [
        "dist"
    ],
    "main": "dist/index.js",
    "description": "yoga-layout convenience wrapper",
    "homepage": "https://cocoss-org.github.io/co-yoga",
    "license": "SEE LICENSE IN LICENSE",
    "author": "Bela Bohlender",
    "type": "module",
    "scripts": {
        "test": "nyc mocha ./test.spec.ts",
        "setter": "run-s setter:generate setter:fix",
        "setter:generate": "ts-node --esm scripts/generate-setter.ts ",
        "setter:fix": "prettier --write src/setter.ts",
        "build": "tsc --p build.tsconfig.json",
        "check": "run-s check:prettier check:eslint",
        "check:prettier": "prettier --check src/**/*.{ts,tsx}",
        "check:eslint": "eslint src",
        "fix": "run-s fix:prettier fix:eslint",
        "fix:prettier": "prettier --write src/**/*.{ts,tsx}",
        "fix:eslint": "eslint src --fix",
        "inlinewasm": "inlinewasm node_modules/yoga-wasm-web/dist/yoga.wasm --output src/yoga.js"
    },
    "keywords": [
        "react",
        "flexbox",
        "yoga",
        "typescript"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:cocoss-org/co-yoga.git"
    },
    "dependencies": {
        "base64-js": "^1.5.1",
        "yoga-wasm-web": "^0.3.2"
    },
    "devDependencies": {
        "@types/chai": "^4.3.3",
        "@types/expect": "^24.3.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.13.0",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "chai": "^4.3.6",
        "eslint": "^8.26.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-prettier": "^4.2.1",
        "js-inline-wasm": "^0.0.7",
        "mocha": "^10.2.0",
        "npm-run-all": "^4.1.5",
        "nyc": "^15.1.0",
        "prettier": "^2.7.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    }
}
