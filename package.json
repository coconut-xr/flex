{
    "name": "co-yoga",
    "version": "1.0.0",
    "main": "",
    "description": "yoga-layout convinience wrapper",
    "homepage": "https://cocoss-org.github.io/co-yoga",
    "license": "SEE LICENSE IN LICENSE",
    "author": "Bela Bohlender",
    "keywords": [
        "react",
        "flexbox",
        "yoga",
        "typescript"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:cocoss-org/co-yoga.git"
    },
    "scripts": {
        "test": "nyc mocha -r ts-node/register ./test.ts",
        "generate": "run-p enum-lookups defaults",
        "enum-lookups": "run-s enum-lookups:generate enum-lookups:fix",
        "enum-lookups:generate": "ts-node scripts/generate-enum-lookups.ts ",
        "enum-lookups:fix": "prettier --write src/enum-lookups.ts",
        "defaults": "run-s defaults:generate defaults:fix",
        "defaults:generate": "ts-node scripts/generate-defaults.ts ",
        "defaults:fix": "prettier --write src/node-defaults.ts",
        "build": "tsc",
        "check": "run-s check:prettier check:eslint",
        "check:prettier": "prettier --check src/**/*.{ts,tsx}",
        "check:eslint": "eslint src",
        "fix": "run-s fix:prettier fix:eslint",
        "fix:prettier": "prettier --write src/**/*.{ts,tsx}",
        "fix:eslint": "eslint src --fix"
    },
    "peerDependencies": {
        "react": "^17.0.2"
    },
    "dependencies": {
        "yoga-layout-prebuilt": "^1.10.0"
    },
    "devDependencies": {
        "@types/chai": "^4.2.22",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.11.7",
        "@types/react": "^17.0.34",
        "chai": "^4.3.4",
        "eslint": "^8.2.0",
        "mocha": "^9.1.3",
        "npm-run-all": "^4.1.5",
        "nyc": "^15.1.0",
        "prettier": "^2.4.1",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    }
}
